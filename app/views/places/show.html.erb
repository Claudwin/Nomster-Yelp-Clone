                            <% @place.comments.each do |comment| %>
                                <div class="booyah-box">
                                <div class="reserve-seat-block">
                                    <div class="reserve-rating"><%= comment.rating %> 
                                        </div> &nbsp; &nbsp; &nbsp;
                                    <div class="comment-text">
                                    <%= comment.comment %>
                                    </div><br/>
                                    <small>Reviewed by:&nbsp; <%= comment.user.email %></small>
                                    </div>
                                </div>
                                <br/>
                            <% end %>
                    <% end %>
                </div>
            </div>
      </div>
  </div> 
</section>  
    