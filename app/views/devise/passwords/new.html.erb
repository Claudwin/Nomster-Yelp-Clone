<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="container">

<hr>


<div class="col row justify-content-center">
<div class="col-md-6">
<div class="card">
<header class="card-header">
  <%= f.error_notification %>
  <h4 class="card-title mt-2">Forgot your password?</h4>
</header>
<article class="card-body">
<form>
<div class="form-row">
<div class="col form-group">
</div>
	</div> <!-- form-row.// -->
	<div class="form-row">
	<div class="col form-group">
			<%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
	</div> <!-- form-group end.// -->
	</div> <!-- form-row end.// -->
	
 
    <div class="col form-group">
    <div class="form-actions">
                                                
          <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary' %>
    </div> <!-- form-group// -->      
</form>
</article> <!-- card-body end .// -->
<div class="border-top card-body text-center">Have an account? <%= render "devise/shared/links" %></div>

</div> <!-- card.// -->
</div> <!-- col.//-->

</div> <!-- row.//-->

<% end %>
</div> 
<!--container end.//-->

<br><br>

